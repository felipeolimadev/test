<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>timestamp=%d{HH:mm:ss.SSS}, level=%-5level, logger=%logger{36}, message={%t} %msg,%n</pattern>
        </encoder>
    </appender>

    <logger name="com.samsung.android.app.ruleengine" level="DEBUG"/>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>

