<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/insert_vp_layout" android:padding="16.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:id="@id/btn_insert" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Insert" />
    <EditText android:id="@id/et_fvp_id" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="FVP ID (default: 0)" android:inputType="number" />
    <EditText android:id="@id/editTextDate" android:focusable="false" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Timestamp (YYYY-MM-DD)" android:inputType="none" />
    <EditText android:id="@id/editTextTime" android:focusable="false" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Timestamp (HH:MM)" android:inputType="none" />
    <EditText android:id="@id/et_latitude" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Latitude (default: 0.0)" android:inputType="numberDecimal|numberSigned" />
    <EditText android:id="@id/et_longitude" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Longitude (default: 0.0)" android:inputType="numberDecimal|numberSigned" />
    <EditText android:id="@id/et_label" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Label (default: 0)" android:inputType="number" />
    <EditText android:id="@id/et_country_code" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Country Code" android:inputType="text" />
</LinearLayout>
