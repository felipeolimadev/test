<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="horizontal" android:id="@id/usecase_spinner_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Spinner android:id="@id/usecase_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/search_view_top_margin" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/time_filter_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/start_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="2.0dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="~" android:layout_marginEnd="2.0dip" />
        <Button android:id="@id/end_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="2.0dip" />
        <Button android:id="@id/all_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_place_all" android:layout_marginEnd="2.0dip" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/media_type_filter_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14.0sp" android:textStyle="bold" android:layout_gravity="center_vertical" android:id="@id/media_type_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_lifecycle_media_entertainment_media_type" />
