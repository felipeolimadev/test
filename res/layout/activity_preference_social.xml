<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <HorizontalScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:id="@id/preference_level_high_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_social_preference_level_high" />
            <Button android:id="@id/preference_level_mid_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_social_preference_level_mid" />
            <Button android:id="@id/preference_level_low_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_social_preference_level_low" />
            <Button android:id="@id/upcoming_contact_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/preference_social_upcoming_contact" />
        </LinearLayout>
    </HorizontalScrollView>
    <ListView android:id="@id/recycler_view" android:layout_width="fill_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager" />
</LinearLayout>
