<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="horizontal" android:id="@id/usecase_spinner_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Spinner android:id="@id/usecase_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/search_view_top_margin" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/time_filter_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/start_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="2.0dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="~" android:layout_marginEnd="2.0dip" />
        <Button android:id="@id/end_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="2.0dip" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10.0dip">
        <Button android:id="@id/execute_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:text="@string/preference_social_usecase_execute" />
    </LinearLayout>
    <ListView android:id="@id/recycler_view" android:layout_width="fill_parent" android:layout_height="wrap_content" app:layoutManager="LinearLayoutManager" />
    <LinearLayout android:orientation="vertical" android:id="@id/result_driving_probability" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18.0sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0dip" android:text="운전자 점수" />
        <TextView android:textSize="15.0sp" android:textStyle="bold" android:textColor="@color/white" android:id="@id/driving_probability" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3.0dip" />
        <TextView android:textSize="13.0sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0dip" android:text="운전자 점수 =\n 운전 기록 기반 점수 + 자동차 관련 앱 사용 시간 기반 점수" />
        <TextView android:textSize="18.0sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0dip" android:text="운전 기록 기반 점수 계산 로직 (0~0.9)" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="10.0dip">
            <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TableLayout android:id="@id/driving_day_score_guide_table" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TableRow>
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="조건" />
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="점수 범위" />
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="계산식" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="최근 1년 동안 운전 기록이 없음" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="고정값 0" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="최근 100일 동안만 운전 기록이 없음" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.5" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="고정값 0.5" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="최근 100일 동안 운전 일수가 10일 이하" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.5 ~ 0.8" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.5 + 0.3 * (days / 10)" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="최근 100일 동안 운전 일수가 10일 이상 50일 이하" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.8 ~ 0.9" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.8 + 0.1 * ((days - 10) / 40)" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="최근 100일 동안 운전 일수가 50일 이상" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.9" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="고정값 0.9" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
        <TextView android:textSize="18.0sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0dip" android:text="앱 사용 시간 기반 점수 계산 로직 (0~0.09)" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
            <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TableLayout android:id="@id/app_usage_score_guide_table" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TableRow>
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="조건" />
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="점수 범위" />
                        <TextView android:textColor="@color/white" android:background="@drawable/table_header" android:padding="4.0dip" android:text="계산식" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="자동차 앱 사용 시간 평균(14m6s) 미만" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0 ~ 0.09" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="(사용시간/평균시간) * 0.09" />
                    </TableRow>
                    <TableRow>
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="자동차 앱 사용 시간 평균(14m6s) 이상" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="0.09" />
                        <TextView android:background="@drawable/table_transparent_row_boarder" android:padding="4.0dip" android:text="고정값 0.09" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
